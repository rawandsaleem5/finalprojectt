    <form method="post">

        please Enter Trainor Id:<input type="text" name="trainerid" maxlength="25" value="@Request.Form["trainerid"]"><br><br>
        please Enter Tranor name:<input type="text" name="name" maxlength="25" value="@Request.Form["name"]"><br><br>
        please Enter Tranor mobile number:<input type="text" name="mobnum" maxlength="30" value="@Request.Form["mobnum"]"><br><br>

        please Enter  schedule id:<input type="text" name="scheduleid" maxlength="30" value="@Request.Form["scheduleid"]"><br><br>

        please select Gender:
        <select name="gender" size="1">
            <option value="Female">Female</option>
            <option value="Male">Male</option>
        </select>



        <h1>Comment:</h1>
<textarea name="comment" cols="100" rows="4">
</textarea><br><br>
        <center><input type="submit" value="Insert Trainor" name="ADD"></center>
        <br><br>

        <center> <A href="~/Gymsystemdesign.cshtml"</A>Back</center><br>

    </form>
</body>
</html>

