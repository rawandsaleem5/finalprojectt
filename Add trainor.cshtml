@using WebMatrix.Data


@{
    Validation.RequireField("trainerid");
    Validation.RequireField("name");
    Validation.RequireField("mobnum");
    Validation.RequireField("scheduleid");
   

    var trainerid = "";
    var name = "";
    var mobnum = "";
  
    var scheduleid = "";



    if (IsPost && Validation.IsValid())
    {
        trainerid = Request.Form["trainerid"];
        name = Request.Form["name"];
        mobnum = Request.Form["mobnum"];
        scheduleid = Request.Form["scheduleid"];
        

        var db = Database.Open("Gym");
        var insertCommand = "INSERT INTO  Trainor (trainerid,name,mobnum,scheduleid) Values(@0, @1, @2,@3)";
        db.Execute(insertCommand, trainerid,name, mobnum, scheduleid);
        Response.Redirect("~/showTrainor");
    }


}


<!DOCTYPE html>
<html>

<head>
    <title>Gym</title>
</head>


<body style="background-color: Beige; ">
