@using WebMatrix.Data


@{
    Validation.RequireField("customerid");
    Validation.RequireField("name");
    Validation.RequireField("age");
    Validation.RequireField("mobilenum");
    Validation.RequireField("trainerid");

    var customerid = "";
    var name = "";
    var age = "";
    var mobilenum = "";
    var trainerid = "";



    if (IsPost && Validation.IsValid())
    {
        customerid = Request.Form["customerid"];
        name = Request.Form["name"];
        age = Request.Form["age"];
        mobilenum = Request.Form["mobilenum"];
        trainerid = Request.Form["trainerid"];

        var db = Database.Open("Gym");
        var insertCommand = "INSERT INTO  Customer (customerid,name, age, mobilenum,trainerid) Values(@0, @1, @2,@3,@4)";
        db.Execute(insertCommand, customerid,name, age, mobilenum, trainerid);
        Response.Redirect("~/Displaycustomer");
    }


}


